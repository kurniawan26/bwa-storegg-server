<%- include ../../partials/header.ejs %> <%- include ../../partials/navbar.ejs
%> <%- include ../../partials/sidebar.ejs %>
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Category</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/category">Category</a></li>
            <li class="breadcrumb-item active">Tambah</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Form tambah nominal</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form action="/nominal/create" method="post">
              <div class="card-body">
                <div class="form-group">
                    <label>Nama Koin</label>
                    <select class="form-control select2 btn-lg" style="width: 100%;" name="coinName" required>
                      <option selected>Pilih Koin</option>
                      <option value="Gold">Gold</option>
                      <option value="Diamond">Diamond</option>
                      <option value="Jewel">Jewel</option>
                    </select>
                  </div>
                <div class="form-group">
                  <label for="coinQuantity">Masukan Jumlah Koin</label>
                  <input
                    type="text"
                    class="form-control"
                    id="coinQuantity" 
                    name="coinQuantity"
                    placeholder="Masukan Jumlah Koin"
                  />
                </div>
                <div class="form-group">
                  <label for="price">Harga</label>
                  <input
                    type="text"
                    class="form-control"
                    id="price" 
                    name="price"
                    placeholder="Masukan Harga"
                  />
                </div>

              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Simpan</button>
              </div>
            </form>
          </div>
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<%- include ../../partials/footer.ejs %> <%- include ../../partials/js.ejs %>
